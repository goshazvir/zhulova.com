---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import StatsSection from '@/components/sections/StatsSection.astro';
import CaseStudiesSection from '@/components/sections/CaseStudiesSection.astro';
import QuestionsSection from '@/components/sections/QuestionsSection.astro';
import MotivationalQuote from '@/components/sections/MotivationalQuote.astro';
import TestimonialsSection from '@/components/sections/TestimonialsSection.astro';
import CoursesPreview from '@/components/sections/CoursesPreview.astro';
import ConsultationModal from '@/components/forms/ConsultationModal';

const title = 'Вікторія Жульова - Сертифікований коуч | Коучинг для підприємців та IT-спеціалістів';
const description = 'Допоможу досягти ваших цілей за допомогою коучингу, медитацій, НЛП та перепрограмування старих патернів. 10+ років досвіду, 200+ успішних клієнтів.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section with CTA -->
    <HeroSection />

    <!-- Statistics Section -->
    <StatsSection />

    <!-- Case Studies Section -->
    <CaseStudiesSection />

    <!-- Questions Section -->
    <QuestionsSection />

    <!-- Motivational Quote Section -->
    <MotivationalQuote />

    <!-- Testimonials Section -->
    <TestimonialsSection />

    <!-- Courses Preview Section -->
    <CoursesPreview />
  </main>

  <Footer />

  <!-- Consultation Modal - deferred until browser idle -->
  <ConsultationModal client:idle />
</BaseLayout>

<script>
  import { initScrollAnimations } from '@/utils/scrollAnimations';

  // Initialize scroll animations after page load
  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations();
  });
</script>

<style>
  /* Fade-in-up animation for scroll effects */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }

  /* Respect prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
