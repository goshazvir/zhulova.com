---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import ConsultationModal from '@components/forms/ConsultationModal/index';
import { socialLinks } from '@/data/homePageContent';
---

<BaseLayout
  title="Контакти - Вікторія Жульова"
  description="Зв'яжіться зі мною через соціальні мережі. Стежте за моїми оновленнями, корисними порадами та новинами на YouTube, Instagram, Telegram, Facebook та TikTok."
>
  <Header variant="main" />

  <main class="min-h-screen bg-white pt-32 pb-20">
    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-navy-900 mb-6">
        Контакти
      </h1>
      <p class="text-xl md:text-2xl text-navy-700 max-w-3xl mx-auto leading-relaxed">
        Стежте за мною в соціальних мережах
      </p>
    </section>

    <!-- Social Media Grid -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- YouTube -->
        <a
          href={socialLinks.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl shadow-lg p-8 border-2 border-navy-100 hover:border-red-500 hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-center gap-6">
            <div class="flex-shrink-0 w-16 h-16 bg-red-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-serif font-bold text-navy-900 mb-1 group-hover:text-red-500 transition-colors">
                YouTube
              </h2>
              <p class="text-navy-600">
                Відео про коучинг та розвиток
              </p>
            </div>
            <svg class="w-6 h-6 text-navy-400 group-hover:text-red-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>

        <!-- Instagram -->
        <a
          href={socialLinks.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl shadow-lg p-8 border-2 border-navy-100 hover:border-pink-500 hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-center gap-6">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-purple-500 via-pink-500 to-orange-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" fill-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-serif font-bold text-navy-900 mb-1 group-hover:text-pink-500 transition-colors">
                Instagram
              </h2>
              <p class="text-navy-600">
                Щоденні поради та історії
              </p>
            </div>
            <svg class="w-6 h-6 text-navy-400 group-hover:text-pink-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>

        <!-- Telegram -->
        <a
          href={socialLinks.telegram}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl shadow-lg p-8 border-2 border-navy-100 hover:border-blue-500 hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-center gap-6">
            <div class="flex-shrink-0 w-16 h-16 bg-blue-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 496 512" aria-hidden="true">
                <path d="M248 8C111 8 0 119 0 256S111 504 248 504 496 393 496 256 385 8 248 8zM363 176.7c-3.7 39.2-19.9 134.4-28.1 178.3-3.5 18.6-10.3 24.8-16.9 25.4-14.4 1.3-25.3-9.5-39.3-18.7-21.8-14.3-34.2-23.2-55.3-37.2-24.5-16.1-8.6-25 5.3-39.5 3.7-3.8 67.1-61.5 68.3-66.7 .2-.7 .3-3.1-1.2-4.4s-3.6-.8-5.1-.5q-3.3 .7-104.6 69.1-14.8 10.2-26.9 9.9c-8.9-.2-25.9-5-38.6-9.1-15.5-5-27.9-7.7-26.8-16.3q.8-6.7 18.5-13.7 108.4-47.2 144.6-62.3c68.9-28.6 83.2-33.6 92.5-33.8 2.1 0 6.6 .5 9.6 2.9a10.5 10.5 0 0 1 3.5 6.7A43.8 43.8 0 0 1 363 176.7z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-serif font-bold text-navy-900 mb-1 group-hover:text-blue-500 transition-colors">
                Telegram
              </h2>
              <p class="text-navy-600">
                Прямий зв'язок та консультації
              </p>
            </div>
            <svg class="w-6 h-6 text-navy-400 group-hover:text-blue-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>

        <!-- Facebook -->
        <a
          href={socialLinks.facebook}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl shadow-lg p-8 border-2 border-navy-100 hover:border-blue-600 hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-center gap-6">
            <div class="flex-shrink-0 w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-serif font-bold text-navy-900 mb-1 group-hover:text-blue-600 transition-colors">
                Facebook
              </h2>
              <p class="text-navy-600">
                Спільнота однодумців
              </p>
            </div>
            <svg class="w-6 h-6 text-navy-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>

        <!-- TikTok -->
        <a
          href={socialLinks.tiktok}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl shadow-lg p-8 border-2 border-navy-100 hover:border-black hover:shadow-xl transition-all duration-300 md:col-span-2"
        >
          <div class="flex items-center gap-6 max-w-xl mx-auto">
            <div class="flex-shrink-0 w-16 h-16 bg-black rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-serif font-bold text-navy-900 mb-1 group-hover:text-black transition-colors">
                TikTok
              </h2>
              <p class="text-navy-600">
                Короткі відео та лайфхаки
              </p>
            </div>
            <svg class="w-6 h-6 text-navy-400 group-hover:text-black group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      </div>
    </section>

    <!-- Additional Info Section -->
    <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 mt-16 text-center">
      <div class="bg-gradient-to-br from-gold-50 to-sage-50 rounded-2xl p-8 md:p-12">
        <h2 class="text-3xl font-serif font-bold text-navy-900 mb-4">
          Готові розпочати свій шлях до змін?
        </h2>
        <p class="text-lg text-navy-700 mb-8 leading-relaxed max-w-2xl mx-auto">
          Оберіть зручний для вас канал зв'язку та приєднуйтесь до спільноти людей, які прагнуть особистісного зростання та досягнення своїх цілей.
        </p>
        <button
          id="contacts-cta-button"
          type="button"
          class="bg-gold-500 text-navy-900 px-8 py-4 text-lg font-medium rounded-lg hover:bg-gold-400 transition-colors focus:ring-2 focus:ring-offset-2 focus:ring-gold-500"
          aria-label="Записатись на консультацію"
        >
          Записатись на консультацію
        </button>
      </div>
    </section>
  </main>

  <!-- Consultation Modal -->
  <ConsultationModal client:load />

  <Footer variant="legal" />
</BaseLayout>

<script>
  import { useUIStore } from '@/stores/uiStore';

  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', () => {
    const contactsCTAButton = document.getElementById('contacts-cta-button');
    if (contactsCTAButton) {
      contactsCTAButton.addEventListener('click', () => {
        useUIStore.getState().openConsultationModal();
      });
    }
  });
</script>
