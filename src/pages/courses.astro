---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
---

<BaseLayout
  title="Курси - Вікторія Жульова"
  description="Практичні курси з особистісного розвитку, трансформації мислення та досягнення цілей від сертифікованого коуча Вікторії Жульової"
>
  <Header variant="main" />

  <main class="min-h-screen bg-white pt-32 pb-20">
    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-16">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-navy-900 mb-6">
        Мої курси
      </h1>
      <p class="text-xl md:text-2xl text-navy-700 max-w-3xl leading-relaxed">
        Практичні інструменти для самостійного розвитку
      </p>
    </section>

    <!-- Courses Grid -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Course Card 1: Мій Курс -->
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border border-navy-100">
          <div class="bg-gradient-to-br from-gold-500 to-gold-600 h-48 flex items-center justify-center">
            <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-serif font-bold text-navy-900 mb-3">
              Мій Курс
            </h2>
            <p class="text-navy-700 mb-6 leading-relaxed">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            </p>
            <a
              href="/courses/my-course"
              class="inline-block bg-navy-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-navy-800 transition-colors"
            >
              Дізнатись більше
            </a>
          </div>
        </article>

        <!-- Course Card 2: Майстерність Мислення -->
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border border-navy-100">
          <div class="bg-gradient-to-br from-sage-500 to-sage-600 h-48 flex items-center justify-center">
            <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-serif font-bold text-navy-900 mb-3">
              Майстерність Мислення
            </h2>
            <p class="text-navy-700 mb-6 leading-relaxed">
              Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium totam rem aperiam.
            </p>
            <a
              href="/courses/mindset-mastery"
              class="inline-block bg-navy-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-navy-800 transition-colors"
            >
              Дізнатись більше
            </a>
          </div>
        </article>

        <!-- Course Card 3: Досягнення Цілей -->
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow border border-navy-100">
          <div class="bg-gradient-to-br from-navy-600 to-navy-800 h-48 flex items-center justify-center">
            <svg class="w-20 h-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-serif font-bold text-navy-900 mb-3">
              Досягнення Цілей
            </h2>
            <p class="text-navy-700 mb-6 leading-relaxed">
              Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam.
            </p>
            <a
              href="/courses/goals-achievement"
              class="inline-block bg-navy-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-navy-800 transition-colors"
            >
              Дізнатись більше
            </a>
          </div>
        </article>
      </div>
    </section>
  </main>

  <Footer variant="legal" />
</BaseLayout>
