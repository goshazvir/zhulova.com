---
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

type IconType = 'shield' | 'clock' | 'users' | 'chart';

const indicators: Array<{
  icon: IconType;
  label: string;
  value: string;
}> = [
  {
    icon: 'shield',
    label: 'Сертифікований',
    value: 'Професійний коуч',
  },
  {
    icon: 'clock',
    value: '10+ років',
    label: 'Досвіду в коучингу',
  },
  {
    icon: 'users',
    value: '200+ клієнтів',
    label: 'Досягли своїх цілей',
  },
  {
    icon: 'chart',
    value: '12 000+ годин',
    label: 'Коучингової практики',
  },
];

const iconPaths: Record<IconType, string> = {
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  users: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  chart: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
};
---

<div class={`trust-indicators pt-6 md:pt-8 ${className}`}>
  {indicators.map((indicator) => (
    <div class="trust-card">
      <div class="trust-icon">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d={iconPaths[indicator.icon]}
          />
        </svg>
      </div>
      <div class="trust-content">
        {indicator.value && (
          <span class="trust-value">{indicator.value}</span>
        )}
        {indicator.label && (
          <span class="trust-label">{indicator.label}</span>
        )}
      </div>
    </div>
  ))}
</div>

<style>
  /* Trust Indicators - Premium Design */
  .trust-indicators {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .trust-indicators {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }

  .trust-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.85) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(217, 175, 108, 0.2);
    border-radius: 0.75rem;
    padding: 0.875rem 1rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -1px rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
  }

  .trust-card:hover {
    transform: translateY(-2px);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.08),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: rgba(217, 175, 108, 0.3);
  }

  .trust-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg,
      rgba(217, 175, 108, 0.15) 0%,
      rgba(217, 175, 108, 0.05) 100%);
    border-radius: 0.5rem;
    color: #d9af6c;
  }

  .trust-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    line-height: 1.3;
  }

  .trust-label {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 500;
    letter-spacing: 0.025em;
  }

  .trust-value {
    font-size: 0.875rem;
    color: #1a1a2e;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .trust-card {
      padding: 0.75rem 0.875rem;
    }

    .trust-icon {
      width: 36px;
      height: 36px;
    }

    .trust-label {
      font-size: 0.7rem;
    }

    .trust-value {
      font-size: 0.8rem;
    }
  }
</style>