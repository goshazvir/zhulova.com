---
import { motivationalQuote } from '@/data/homePageContent';
---

<section class="py-20 bg-navy-900 text-white relative overflow-hidden" data-animate>
  {/* Background decorative elements */}
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 left-0 w-96 h-96 bg-gold-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-sage-500 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      {/* Quote Icon */}
      <div class="mb-8">
        <svg class="w-16 h-16 text-gold-400 opacity-50 mx-auto" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
      </div>

      {/* Quote Text */}
      <blockquote class="mb-8">
        <p class="text-2xl md:text-3xl lg:text-4xl font-serif leading-relaxed text-white mb-8">
          {motivationalQuote.text}
        </p>
      </blockquote>

      {/* Author */}
      <cite class="not-italic">
        <div class="inline-flex items-center gap-3">
          <div class="w-1 h-8 bg-gold-500"></div>
          <span class="text-xl font-semibold text-gold-400">
            {motivationalQuote.author}
          </span>
        </div>
      </cite>

      {/* CTA */}
      <div class="mt-12">
        <button
          id="quote-cta"
          type="button"
          class="bg-gold-500 text-navy-900 px-8 py-4 text-lg font-medium rounded-lg hover:bg-gold-400 transition-colors focus:ring-2 focus:ring-offset-2 focus:ring-gold-500 shadow-lg hover:shadow-xl"
        >
          Почати змінювати життя сьогодні
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  import { useUIStore } from '@/stores/uiStore';

  const quoteCTA = document.getElementById('quote-cta');
  if (quoteCTA) {
    quoteCTA.addEventListener('click', () => {
      useUIStore.getState().openConsultationModal();
    });
  }
</script>
